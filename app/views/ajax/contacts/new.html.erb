<div class="overlay contact-form">
  <div class="header">
    <h2>
      <%= t 'labels.contact.new' %>
    </h2>
    <div class="submit button">
      <%= t 'actions.save' %>
    </div>
    <div class="abort button">
      <%= t 'actions.abort' %>
    </div>
  </div>
  <div class="form-wrapper">
    <%= form_tag @url do |f| %>
      <div>
        <%= text_field_tag 'contact[contact]' %>
      </div>
      <div>
        <%= contact_field_select_tag 'contact[field]' %>
      </div>
    <% end %>
  </div>
</div>
