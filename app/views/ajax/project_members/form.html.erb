<div class="overlay project-member-form">
  <div class="header">
    <h2>
      <%= t params[:action], scope: [:labels, :project_member] %>
    </h2>
    <div class="submit button">
      <%= t 'actions.save' %>
    </div>
    <div class="abort button">
      <%= t 'actions.abort' %>
    </div>
  </div>
  <div class="form-wrapper">
    <%= form_for @member, url: @url do |f| %>
      <div class="row">
        <div class="expert">
          <%= f.label :expert %>
          <%= f.hidden_field :expert_id %>
          <p><%= @expert.full_name_with_degree %></p>
        </div>
      </div>
      <div class="row">
        <div class="role">
          <%= f.label :role %>
          <%= f.text_field :role %>
        </div>
      </div>
    <% end %>
  </div>
</div>
