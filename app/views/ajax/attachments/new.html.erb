<div class="overlay attachment-form">
  <div class="header">
    <h2>
      <%= t 'labels.attachment.new' %>
    </h2>
    <div class="submit button">
      <%= t 'actions.save' %>
    </div>
    <div class="abort button">
      <%= t 'actions.abort' %>
    </div>
  </div>
  <div class="form-wrapper">
    <%= form_for @attachment, url: @url do |f| %>
      <div class="input">
        <%= f.text_field :title,
                         placeholder: Attachment.human_attribute_name(:title) %>
      </div>
      <div>
        <%= f.file_field :file %>
     </div>
    <% end %>
  </div>
</div>
