<div class="overlay address-form">
  <div class="header">
    <h2>
      <%= t 'labels.address.new' %>
    </h2>
    <div class="submit button">
      <%= t 'actions.save' %>
    </div>
    <div class="abort button">
      <%= t 'actions.abort' %>
    </div>
  </div>
  <div class="form-wrapper">
    <%= form_for @address, url: @url do |f| %>
      <div>
        <%= f.text_area :address, rows: 4 %>
      </div>
      <div>
        <%= f.country_select :country %>
      </div>
    <% end %>
  </div>
</div>
