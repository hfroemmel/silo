<div class="overlay employee-form">
  <div class="header">
    <h2>
      <%= t params[:action], scope: [:labels, :employee] %>
    </h2>
    <div class="submit button">
      <%= t 'actions.save' %>
    </div>
    <div class="abort button">
      <%= t 'actions.abort' %>
    </div>
  </div>
  <div class="form-wrapper">
    <%= form_for @employee, url: @url do |f| %>
      <div class="row">
        <div class="title">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class="gender">
          <%= f.label :gender %>
          <%= f.select :gender, Employee.gender_values %>
        </div>
      </div>
      <div class="row">
        <div class="prename">
          <%= f.label :prename %>
          <%= f.text_field :prename %>
        </div>
        <div class="name">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row">
        <%= f.label :job %>
        <%= f.text_field :job %>
      </div>
    <% end %>
  </div>
</div>
