<div class="multi-select languages">
  <div class="header">
    <h2>
      <%= t 'labels.language.languages' %>
    </h2>
    <div class="submit button">
      <%= t 'actions.submit' %>
    </div>
    <div class="abort button">
      <%= t 'actions.abort' %>
    </div>
  </div>
  <div class="select" data-filtered="true">
    <form class="filter">
      <input type="text"/>
    </form>
    <ul>
      <% @languages.in_groups(6, false) do |group| %>
        <li class="col">
          <ul>
            <% group.each do |language| %>
              <li class="item<%= ' prioritized' if language.prioritized? %>">
                <%= check_box_tag language.id, 1, false, 'data-name' => language.human %>
                <%= label_tag language.id, language.human %>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</div>
