<%= form_tag login_path, method: :post, id: 'login-form' do %>
  <p>
    <%= text_field_tag :username, @username,
                       placeholder: User.human_attribute_name(:username) %>
  </p>
  <p>
    <%= password_field_tag :password, nil,
                           placeholder: User.human_attribute_name(:password) %>
  </p>
  <p>
    <%= submit_tag t('actions.login') %>
  </p>
<% end %>
