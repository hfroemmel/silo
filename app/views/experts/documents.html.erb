<%= render 'sidebar' %>

<div id="main">
  <%= render 'details_header' %>
  <div class="documents">
    <div class="cvs">
      <h4>
        <%= t('label.cvs') %>
      </h4>
      <table>
        <tbody>
          <% @expert.cvs.each do |cv| %>
            <tr>
              <td>
                <%= link_to cv.language.human, [@expert, cv] %>
              </td>
              <td>
                <%= cv.ext %>
              </td>
              <td>
                <%= l cv.created_at, format: :long %>
              </td>
              <% if current_user.access?(:experts) %>
                <td class="del">
                  <%= button_to('x', [@expert, cv], method: :delete,
                                                    class: 'del') %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- cvs -->
    <div class="attachments">
      <h4>
        <%= t('label.attachments') %>
      </h4>
      <table>
        <tbody>
          <% @expert.attachments.each do |attachment| %>
            <tr>
              <td>
                <%= link_to attachment.title, [@expert, attachment] %>
              </td>
              <td>
                <%= attachment.ext %>
              </td>
              <td>
                <%= l attachment.created_at, format: :long %>
              </td>
              <% if current_user.access?(:experts) %>
                <td class="del">
                  <%= button_to('x', [@expert, attachment], method: :delete,
                                                            class: 'del') %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- attachments -->
    <% if current_user.access?(:experts) %>
      <div class="forms">
        <%= form_for Cv.new, url: expert_cvs_path(@expert) do |f| %>
          <div>
            <%= f.file_field :file %>
            <%= f.collection_select :language_id, languages, :id, :human %>
            <%= f.submit t('action.add') %>
          </div>
        <% end %>
        <%= form_for Attachment.new, url: expert_attachments_path(@expert) do |f| %>
          <div>
            <%= f.file_field :file %>
            <%= f.text_field :title, placeholder: t('label.title') %>
            <%= f.submit t('action.add') %>
          </div>
        <% end %>
      </div><!-- forms -->
    <% end %>
    <div class="clear"></div>
  </div>
</div>
