<div class="header details">
  <h2>
    <%= @expert.full_name_with_degree %>
  </h2>
  <h3>
    <%= Expert.human_attribute_name(:updated_at) %>
    <%= l @expert.updated_at, format: :short %>
    <%= t 'labels.generic.by', name: @expert.user.try(:full_name) %>
  </h3>
  <ul class="tools">
    <li>
      <%= link_to(t('actions.print'), report_expert_path(@expert),
                  class: 'icon-print') %>
    </li>
  </ul>
  <ul class="tabs">
    <li class="show">
      <%= link_to t('labels.expert.details'), expert_path(@expert) %>
    </li>
    <li class="documents">
      <%= link_to t('labels.expert.documents'), documents_expert_path(@expert) %>
    </li>
  </ul>
</div>
