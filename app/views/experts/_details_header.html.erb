<div class="header details">
  <h2>
    <%= expert.full_name_with_degree %>
  </h2>
  <h3>
    <%= Expert.human_attribute_name(:updated_at) %>
    <%= l expert.updated_at, format: :short %>
    <%= t 'labels.generic.by', name: expert.user.try(:full_name) %>
  </h3>
  <ul class="tools">
    <li>
      <%= listable_expert_tag expert do %>
        <span class="inactive">
          <%= t 'labels.list.add' %>
        </span>
        <span class="active">
          <%= t 'labels.list.remove' %>
        </span>
      <% end %>
    </li>
    <li>
      <%= link_to t('actions.print'), expert_path(expert, format: :pdf),
                  class: 'icon-print' %>
    </li>
    <% if current_user.access?(:experts) %>
      <li>
        <%= link_to t('actions.edit'), edit_expert_path(expert),
                    class: 'icon-pencil' %>
      </li>
      <li>
        <%= link_to t('actions.delete'), expert_path(expert), class: 'icon-trash',
                    method: :delete, 'data-password' => true,
                    confirm: t('messages.expert.confirm.delete') %>
      </li>
    <% end %>
  </ul>
  <ul class="tabs">
    <li class="show">
      <%= link_to t('labels.expert.details'), expert_path(expert) %>
    </li>
    <li class="documents">
      <%= link_to t('labels.expert.documents'), documents_expert_path(expert) %>
    </li>
  </ul>
</div>
