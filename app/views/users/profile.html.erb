<div id="main">
  <h2>
    <%= @title %>
  </h2>
  <%= form_for @user, url: profile_url do |f| %>
    <div class="field-box base">
      <p>
        <%= f.label :username, t('label.username') %>
        <%= f.text_field :username, disabled: true %>
      </p>
      <p>
        <%= f.label :email, t('label.email') %>
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :password, t('label.password') %>
        <%= f.password_field :password %>
      </p>
      <p>
        <%= f.label :password_confirmation, t('label.password_confirmation') %>
        <%= f.password_field :password_confirmation %>
      </p>
      <p>
        <%= f.label :password_old, t('label.password_old') %>
        <%= f.password_field :password_old %>
      </p>
    </div>
    <div class="field-box more">
      <p>
        <%= f.label :name, t('label.name') %>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :prename, t('label.prename') %>
        <%= f.text_field :prename %>
      </p>
      <p>
        <%= f.label :locale, t('label.locale') %>
        <%= f.select :locale, list_locales %>
      </p>
    </div>
    <div class="field-box buttons">
      <p>
        <%= f.submit, t('label.save') %>
      </p>
    </div>
  <% end %>
</div>
