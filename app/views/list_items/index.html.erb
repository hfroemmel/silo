<%= render 'lists/sidebar' %>

<div id="main">
  <%= render 'lists/details_sidebar', list: @list %>

  <div class="tabbed-content">
    <ul class="tabs">
      <li class="experts-list">
        <%= link_to List.human_attribute_name(:experts), list_experts_path(@list) %>
      </li>
      <li class="partners-list">
        <%= link_to List.human_attribute_name(:partners), list_partners_path(@list) %>
      </li>
    </ul>

    <div class="content">
      <ul class="tools">
        <li class="export employees">
          <%= link_to t('labels.employee.export'),
                      list_employees_path(list_id: @list, format: :csv),
                      class: 'icon-download' %>
        </li>
        <li class="export">
          <%= link_to t('actions.export'), url_for(params.merge(format: :csv)),
                      class: 'icon-download' %>
        </li>
        <li class="print">
          <%= link_to t('actions.print'), print_ajax_list_path(id: @list, item_type: @item_type),
                      class: 'icon-print hidden-form' %>
        </li>
      </ul>

      <table class="list-items">
        <thead>
          <tr>
            <th>
              <%= ListItem.human_attribute_name(:name) %>
            </th>
            <th>
              <%= ListItem.human_attribute_name(:note) %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |list_item| %>
            <tr>
              <td>
                <%= link_to list_item.name, list_item.item %>
              </td>
              <td class="note">
                <%= editable_button_for list_item, :note, url: [:ajax, @list, list_item] %>
              </td>
              <td class="removefromlist">
                <%= remove_from_list_button_for @list, list_item %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="clear"></div>
</div>
