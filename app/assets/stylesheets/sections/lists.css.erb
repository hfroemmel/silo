/**
 * lists.css.erb
 *
 * Defines some list styles.
 */
body.lists #content-wrapper {
  padding: 0;
}

body.lists #content {
  border-radius: 4px 0 4px 4px;
}

/* Filter */
body.lists #filter form label {
  float: left;
  margin: 6px 10px 0;
}

body.lists #filter input[type=submit] {
  float: left;
}

/* Tables/Header */
body.lists #main table.lists td:first-child {
  width: 8px;
}

body.lists #main table.lists td:nth-child(2),
body.lists #main table.experts td:nth-child(2) {
  background-color: #f7f7f7;
}

body.lists #main table.lists td.open {
  width: 10px;
  padding-right: 0;
}

body.lists #main table td.remove {
  width: 10px;
}

body.lists #main table.lists td.open a,
body.lists #main table td.remove a {
  display: block;
  width: 20px;
  height: 20px;
  overflow: hidden;
}

body.lists #main table.lists td.open a.active,
body.lists #main div.header ul.tools li.open a.active  {
  color: #999;
  cursor: default;
}

body.lists #main table td.removefromlist {
  width: 18px;
}

body.lists #main table td.removefromlist a {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  width: 18px;
}

body.lists #main table td.removefromlist a:before {
  margin-right: 99999px;
}

/* Expert-Lists */
body.experts-list #main table td:first-child {
  width: 6px;
  padding: 0;
}

body.experts-list #main table td:nth-child(3) {
  background: #f7f7f7;
}

/* List form overlay */
div.overlay.list-form {
  top: 50%;
  width: 360px;
  margin: -100px 0 0 -180px;
}

div.overlay.list-form div.form-wrapper {
  margin: 0;
}

div.overlay.list-form form div.message {
  padding-bottom: 10px;
  font-size: .76em;
  color: rgb(68, 68, 68);
}

/* Overlay "Choose List" */
div.overlay.choose-list {
  width: 600px;
  margin-left: -300px;
}

div.overlay.choose-list table {
  position: relative;
  float: left;
  margin: 10px 0 -5px 0;
}

div.overlay.choose-list table td:first-child {
  width: 8px;
}

div.overlay.choose-list table td:nth-child(2) {
  background-color: #f7f7f7;
}

div.overlay.choose-list table td:last-child {
  width: 10px;
  padding-right: 0;
}

div.overlay.choose-list table td:last-child a {
  display: block;
  width: 20px;
  height: 20px;
  overflow: hidden;
}

div.overlay.choose-list table td:last-child a:before {
  color: #666;
  margin-right: 99999px;
}
