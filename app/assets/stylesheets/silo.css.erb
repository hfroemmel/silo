/**
 * silo.css.erb
 *
 * Main silo stylesheet
 *
 * =require reset
 */
body {
  background-color: #3a3a3a;
}

a, form.button_to input[type=submit] {
  margin: 0;
  padding: 0;
  font-size: 1em;
  color: #d0d0d0;
  background-color: transparent;
  border: 0 none transparent;
  cursor: pointer;
}

h1 {
  text-transform: uppercase;
}

h2 {
  padding: 8px 0;
  font-size: 1.2em;
  color: #444;
}

strong {
  font-weight: bold;
}

/* Header */
#wrapper {
  float: left;
  width: 100%;
  padding: 0 10px 10px;
  background-color: #3a3a3a;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#header {
  width: 100%;
  float: left;
  padding: 0 20px;
  line-height: 60px;
  background-color: #3a3a3a;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#header h1 {
  float: left;
  margin-left: -10px;
  text-indent: -9999px;
}

#header h1 a {
  display: block;
  width: 83px;
  background: transparent url(<%= asset_data_uri 'logo.png' %>) center left no-repeat;
}

#user-tools {
  float: right;
  margin:  16px -20px 0 0;
  border: 2px solid #4f4f4f;
  border-radius: 2px;
}

#user-tools li {
  float: right;
}

#user-tools li:first-child {
  border-left: 1px solid #4f4f4f;
}

#user-tools li a, #user-tools li input[type=submit] {
  display: block;
  padding: 0 10px;
  font-size: 12px;
  line-height: 24px;
}

#user-tools li a:hover, #user-tools li input[type=submit]:hover {
  background-color: #353535;
}

#user-tools li input[type=submit] {
  padding-right: 26px;
  background-position: right center;
  background-image: url(<%= asset_data_uri 'icon_logout.png' %>);
  background-repeat: no-repeat;
}

/* Navigation */
#nav {
  float: left;
  width: 100%;
  font-size: .8em;
  background-color: #3a3a3a;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul {
  float: left;
  width: 100%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul li {
  float: left;
  width: 20%;
  padding: 0 2px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul li.users {
  width: 15%;
}

#nav ul li:first-child {
  padding-left: 0;
}

#nav ul li:nth-child(n+4) {
  float: right;
  padding-right: 0;
}

#nav ul li a {
  font-size: .9em;
  display: block;
  padding: 8px 20px;
  text-align: center;
  text-transform: uppercase;
  background: -moz-linear-gradient(top,  #515151 0%, #464646 100%);
  background: -webkit-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -o-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -ms-linear-gradient(top,  #515151 0%,#464646 100%);
  background: linear-gradient(to bottom,  #515151 0%,#464646 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#515151', endColorstr='#464646',GradientType=0 );
  border-radius: 6px 6px 0 0;
  text-shadow: 1px 1px 0px #333;
}

body.experts #nav li.experts a, body.partners #nav li.partners a,
body.references #nav li.references a {
  color: #444;
  background: #dbdbdb;
  text-shadow: 1px 1px 0px #efefef;
}

body.users #nav li.users a {
  color: #222;
  background: #b43b37;
  text-shadow: 1px 1px 0px #c8413c;
}

/* Content */
#content {
  clear: both;
  padding: 10px 0;
  background-color: #dbdbdb;
  border-radius: 0 0 4px 4px;
}

body.admin.users #content {
  background-color: #B43B37;
}

/* Sidebar */
#sidebar {
  float: left;
  width: 80px;
  padding: 4px 10px 0 10px;
  font-size: .7em;
}

#sidebar ul li {
  padding: 14px 0 10px;
  border-bottom: 1px solid #c9c9c9;
  box-shadow: 0 1px 0 #e9e9e9;
}

body.admin.users #sidebar ul li {
  padding: 14px 0 10px;
  border-bottom: 1px solid #8c2e2b;
  box-shadow: 0 1px 0 #d24642;
}

#sidebar ul li a {
  display: block;
  padding-top: 22px;
  color: #333;
  text-align: center;
  background-color: transparent;
  background-position: center top;
  background-repeat: no-repeat;
}

body.users #sidebar ul li.index a, body.experts #sidebar ul li.index a {
  color: #222;
  background-image: url(<%= asset_data_uri 'icon_list.png' %>);
}

body.users #sidebar ul li.new a {
  color: #222;
  background-image: url(<%= asset_data_uri 'icon_user_add.png' %>);
}

body.users.index #sidebar ul li.new a , body.users.new #sidebar li.index a {
  text-shadow: 1px 1px 0px #C8413C;
}

body.experts #sidebar ul li.new a {
  background-image: url(<%= asset_data_uri 'icon_expert_add.png' %>);
}

body.index #sidebar ul li.index, body.new #sidebar li.new {
  margin: -4px -10px 0 0;
  padding-top: 18px;
  background-color: #f9f9f9;
  border: 0 none transparent;
  border-radius: 4px 0 0 4px;
  box-shadow: -1px 1px 1px rgba(0, 0, 0, .2);
}


/* Main */
#main {
  margin: 0 10px 0 100px;
  padding: 10px 20px;
  background-color: #f9f9f9;
  border-radius: 4px;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
}

body.index #main {
  border-top-left-radius: 0;
}

#main table {
  width: 100%;
  font-size: .8em;
  border-collapse: separate;
  border-spacing: 0 10px;
}

#main table td {
  margin-bottom: 20px;
  padding: 6px 14px;
  background-color: #efefef;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
}

#main table td:first-child {
  border-radius: 4px 0 0 4px;
  background: #f7f7f7;
  border-left: none;
}

#main table.users td:first-child {
  padding-left: 55px;
  background: #efefef url(<%= asset_data_uri 'icon_user.png' %>) 20px center no-repeat;
}

#main table td:last-child {
  border-radius: 0 4px 4px 0;
  background: #f7f7f7;
}

#main table td a {
  color: #444;
}

#main table td.privileges span {
  margin-right: 10px;
  padding-right: 16px;
}

#main table td.privileges span.checked {
  background: transparent url(<%= asset_data_uri 'icon_checkmark.png' %>) right center no-repeat;
}

#main table td.icons a, #main table td.icons input[type=submit] {
  display: block;
  padding-left: 10px;
  text-indent: -9999px;
  color: #444;
  background: transparent;
  background-position: left center;
  background-repeat: no-repeat;
}

#main table td.icons {
  width: 10px;
}

#main table td.icons a {
  background-image: url(<%= asset_data_uri 'icon_edit.png' %>);
}

#main table td.icons input[type=submit] {
  background-image: url(<%= asset_data_uri 'icon_delete.png' %>);
}

body.experts #main table.experts {
  color: #5b5b5b;
  border-spacing: 0 8px;
  font-size: .75em;
}

body.experts #main table.experts thead tr {
  line-height: 0;
}

body.experts #main table.experts thead th {
  cursor: pointer;
  text-align: left;
  border-spacing: 0;
  background: none;
  box-shadow: none;
  font-size: .8em;
  padding: 0 5px 0 0;
  font-weight: bold;
  color: #BBB;
  text-shadow: 1px 1px 0px rgba(255,255,255,.2);
  padding: 0 0 0 5px;
}

body.experts #main table.experts thead th:hover {
  color: #AAA;
  text-shadow: 1px 1px 0px rgba(255,255,255,.1);
}

body.experts #main table.experts thead th span {
  float: right;
}

body.experts #main table.experts td:first-child {
  position: relative;
}

body.experts #main table.experts td:first-child p:before {
  content: ' ';
  width: 2px;
  height: 100%;
  position: absolute;
  left: 5px;
  top: 0;
}

body.experts #main table.experts td:first-child.male p:before {
  background-color: #7c99b6;
}

body.experts #main table.experts td:first-child.female p:before {
  background-color: #b67c84;
}

body.experts #main table.experts td:first-child p:after {
  content: ' ';
  position: absolute;
  top: 50%;
  right: 0;
  border: solid transparent;
  width: 0;
  height: 0;
  margin-top: -5px;
  border-width: 5px;
  border-right-color: #e3e3e3;
}

body.experts #main table.experts td.icons {
  width: 50px;
  position: relative;
}

body.experts #main table.experts td.icons div.confirm-delete {
  position: absolute;
  display: none;
  left: -100%;
  margin: -5px 0 0 -27px;
  padding: 0 10px;
  background: #b43b37;
  color: #eee;
  height: 100%;
}

body.experts #main table.experts td.icons div.confirm-delete:before {
    content: ' ';
    position: absolute;
    top: 50%;
    left: 100%;
    border: solid transparent;
    width: 0;
    height: 0;
    margin-top: -4px;
    border-width: 4px;
    border-left-color: #b43b37;
}

body.experts #main table.experts td.icons div.confirm-delete div {
  cursor: pointer;
  float: left;
  position: relative;
  top: 50%;
  line-height: 20px;
  margin: -10px 5px 0 5px;
  text-shadow: 1px 1px 0px #9d302c;
}

body.experts #main table.experts td.icons div.confirm-delete div:hover {
  color: #fff;
}

body.experts #main #experts_header {
  float: left;
  width: 100%;
  margin: 0 0 20px -10px;
  padding: 10px;
  background: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
}

body.experts #main #experts_header h2 {
  padding: 0;
  line-height: 1em;
  text-shadow: 1px 1px 0px #efefef;
  margin-bottom: 10px;
}

#main #experts_header #quicksearch {
  float: left;
  margin-right: 10px;
}

#main #experts_header #quicksearch input[type=text] {
  float: left;
  width: 250px;
  padding: 7px 30px 5px 10px;
  background: #f5f5f5;
  color: #222;
  font-size: 12px;
  line-height: 16px;
  border: none;
  border-bottom: 1px solid rgba(255, 255, 255, .3);
  border-radius: 3px;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, .4);
  box-sizing: border-box;
}

#main #experts_header #quicksearch input[type=submit] {
  cursor: pointer;
  float: left;
  margin: 2px 0 0 -29px;
  text-indent: -9999px;
  height: 29px;
  width: 29px;
  background:  url(<%= asset_data_uri 'icon_search.png' %>) center center no-repeat;
  border: none;
  opacity: .5;
}

#main #experts_header #quicksearch input[type=submit]:hover {
  opacity: .8;
}

#main #experts_header #toggle_filter_button {
  cursor: pointer;
  float: left;
  padding: 0 10px;
  margin-top: 2px;
  height: auto;
  font-size: .9em;
  line-height: 29px;
  background: #efefef;
  border-radius: 3px;
}

#main #experts_header #filter {
  display: none;
  clear: both;
  padding-top: 20px;
}

/* Forms */
#main form {
  position: relative;
}

#main form div.field-box {
  float: left;
  width: 49%;
  padding: 6px 10px;
  margin-bottom: 20px;
  background-color: #e8e8e8;
  border-radius: 4px;
  box-sizing: border-box;
}

#main form div.field-box.buttons {
  clear: both;
  background-color: transparent;
}

#main form div.field-box.more {
  float: right;
}

#main form p {
  margin: 10px 0;
}

#main form label {
  display: block;
  font-size: .8em;
}

#main form label.check-box-label {
  display: inline;
}

#main form input[type=text], #main form input[type=password] {
  width: 100%;
  padding: 6px 10px;
  border: 1px solid #c0c0c0;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

/* Login */

body.login {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 50%;
  float: none;
}

body.login #content {
  position: relative;
  margin: -180px auto 0 auto;
  width: 250px;
  text-align: center;
  background-color: transparent;
}

body.login #content h1 {
  text-indent: -9999px;
  height: 80px;
  width: 99%;
  background: transparent url(<%= asset_data_uri 'logo.png' %>) center center no-repeat;
}

body.login #content form#login-form input[type=text],
body.login #content form#login-form input[type=password] {
  width: 100%;
  padding: 6px 10px;
  background: #2b2b2b;
  color: #efefef;
  font-size: .8em;
  line-height: 1.6em;
  border: none;
  border-bottom: 1px solid rgba(255, 255, 255, .1);
  border-radius: 4px;
  box-shadow:inset 0 1px 2px rgba(0, 0, 0, .2);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body.login #content form#login-form input[type=submit] {
  width: 100%;
  cursor: pointer;
  color: #efefef;
  text-shadow: 1px 1px 0px rgba(0, 0, 0, .2);
  font-size: .8em;
  line-height: 2em;
  border: none;
  border-top: 1px solid rgba(255, 255, 255, .1);
  border-radius: 4px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
  background: -moz-linear-gradient(top,  #515151 0%, #464646 100%);
  background: -webkit-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -o-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -ms-linear-gradient(top,  #515151 0%,#464646 100%);
  background: linear-gradient(to bottom,  #515151 0%,#464646 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#515151', endColorstr='#464646',GradientType=0 );
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

/* Flash */
div.flash {
  float: left;
  position: relative;
  top: 16px;
  left: 16px;
  padding: 0 16px;
  font-size: 12px;
  line-height: 24px;
  color: #dbdbdb;
  background-color: #3a3a3a;
  border: 2px solid #4f4f4f;
  border-radius: 2px;
}

div.flash:before, div.flash:after {
  content: ' ';
  position: absolute;
  top: 50%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
}

div.flash:before {
  margin-top: -8px;
  border-width: 8px;
  border-right-color: #4f4f4f;
}

div.flash:after {
  margin-top: -5px;
  border-width: 5px;
  border-right-color: #3a3a3a;
}

div.flash.highlight {
  padding: 0 32px;
}

body.login div.flash:before, body.login div.flash:after {
  content: ' ';
  position: absolute;
  top: -8px;
  right: 50%;
  border: solid transparent;
  width: 0;
  height: 0;
}

body.login div.flash {
  position: absolute;
  top: auto;
  left: auto;
  bottom: -28px;
  width: 100%;
  padding: 0 16px;
  font-size: 12px;
  line-height: 24px;
  color: #DBDBDB;
  background-color: #3A3A3A;
  border: 2px solid #4F4F4F;
  border-radius: 2px;
  box-sizing: border-box;
}

body.login div.flash:before {
  margin: -8px -5px 0 0;
  border-width: 8px;
  border-bottom-color: #4F4F4F;
}

body.login div.flash:after {
  margin: -2px -2px 0 0;
  border-width: 5px;
  border-bottom-color: #3A3A3A;
}
