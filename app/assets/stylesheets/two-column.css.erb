/* Left */
#main div.sidebar.details {
  position: relative;
  float: left;
  width: 30%;
  padding: 0;
}

#main div.sidebar.details h2 {
  font-size: 1.15em;
  padding: 0;
}

/* Right */
#main div.tabbed-content {
  position: relative;
  float: left;
  width: 70%;
  padding: 10px;
  background: #F9F9F9;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
  border-radius: 0 4px 4px 4px;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

#main div.tabbed-content ul.tabs li {
  cursor: pointer;
  text-align: center;
  float: left;
  line-height: 2.2em;
  padding: 0;
  margin-right: 3px;
  background: -moz-linear-gradient(top, #F1F1F1 75%, #E9E9E9 100%);
  background: -webkit-linear-gradient(top, #F1F1F1 75%, #E9E9E9 100%);
  background: -o-linear-gradient(top, #F1F1F1 75%, #E9E9E9 100%);
  background: -ms-linear-gradient(top, #F1F1F1 75%, #E9E9E9 100%);
  background: linear-gradient(to bottom, #F1F1F1 75%, #E9E9E9 100%);
  color: #C9C9C9;
  border-radius: 4px 4px 0 0;
  text-shadow: 0 1px 0px rgba(0, 0, 0, 1);
  opacity: .85;
}