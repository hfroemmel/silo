/* Left */
#main div.sidebar.details {
  position: absolute;
  z-index: 2;
  top: 18px;
  left: 20px;
  width: 300px;
  padding: 0 20px 0 0;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

#main div.sidebar.details h2 {
  position: relative;
  float: left;
  width: 100%;
  padding: 0 0 0 22px;
  margin-bottom: 20px;
  font-size: 1em;
  line-height: 1.1em;
  text-shadow: 0 1px 0 #FFF;
}

#main div.sidebar.details h2:before {
  position: absolute;
  top: -1px;
  left: 1px;
  font-size: 1em;
}

#main div.sidebar.details h4 {
  display: block;
  color: #999;
  font-size: .7em;
  padding: 0 2px 4px 0;
  font-weight: bold;
  text-shadow: 0 1px 0 #FFF;
}

#main div.sidebar.details p {
  position: relative;
  float: left;
  width: 100%;
  color: #8D8D8D;
  text-shadow: 0 1px 0 white;
  line-height: 15px;
  font-size: .75em;
  padding-right: 15px;
  margin-bottom: 20px;
}

#main div.sidebar.details div.markdown {
  position: relative;
  float: left;
  width: 100%;
}

#main div.sidebar.details div.markdown p {
  position: relative;
  float: left;
  color: #8D8D8D;
  text-shadow: 0 1px 0 white;
  line-height: 15px;
  font-size: .9em;
  padding-right: 15px;
}

#main div.sidebar.details div.markdown p:before {
  margin-right: 5px;
}

#main div.sidebar.details ul.tools {
  position: relative;
  float: left;
  width: 100%;
  margin-bottom: 30px
}

#main div.sidebar.details ul.tools li {
  position: relative;
  float: left;
  width: 50%;
  padding: 0 0 0 5px;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

#main div.sidebar.details ul.tools li:nth-child(2n+1) {
  padding: 0 5px 0 0;
}

#main div.sidebar.details ul.tools li a {
  display: block;
  float: left;
  height: 22px;
  width: 100%;
  margin: 0 5px 5px 0;
  padding: 0 5px;
  line-height: 22px;
  color: #6b6b6b;
  text-shadow: 0 1px 0 #FFF;
  font-size: 11px;
  font-weight: normal;
  background-color: transparent;
  background-position: left center;
  background-repeat: no-repeat;
  box-shadow: 0 0 0 transparent;
  background: #EFEFEF;
  border-radius: 3px;
  border: 1px solid #d2d2d2;
  box-shadow: 0 1px 0 #fbfbfb, inset 0 1px 0 #FFF;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

#main div.sidebar.details ul.tools li a:hover {
  color: #5b5b5b;
  background: #f5f5f5;
}

#main div.sidebar.details ul.tools li a:before {
  margin-right: 7px;
}

#main div.sidebar.details ul.tools li a.disabled,
#main div.sidebar.details ul.tools li a.active {
  opacity: .66;
}

#main div.sidebar.details ul.tools li a.disabled:hover,
#main div.sidebar.details ul.tools li a.active:hover {
  color: #6b6b6b;
  background: #EFEFEF;
}

/* Right */
#main div.tabbed-content {
  position: relative;
  float: left;
  width: 100%;
  padding: 0 0 0 310px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#main div.tabbed-content div.content {
  position: relative;
  float: left;
  width: 100%;
  padding: 10px 15px;
  background: #fff;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .33);
  border-radius: 0 4px 4px 4px;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  z-index: 2;
}

#main div.tabbed-content ul.tabs {
  position: relative;;
  z-index: 1;
}

#main div.tabbed-content ul.tabs li {
  position: relative;
  z-index: 1;
  cursor: pointer;
  text-align: center;
  float: left;
  line-height: 2.2em;
  font-size: .8em;
  padding: 0;
  margin-right: 5px;
  background: #e2e2e2;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .33), inset 0 -2px 0 rgba(0,0,0,.025);
  border-radius: 4px 4px 0 0;
}

#main div.tabbed-content ul.tabs li a {
  display: block;
  padding: 0px 15px;
  color: #888;
  text-shadow: 0 1px 0px rgba(255, 255, 255, .8);
}

#main div.tabbed-content table {
  padding-top: 5px;
}

#main div.tabbed-content table td {
  background-color: #f1f1f1;
}

#main div.tabbed-content table td:first-child {
  background-color: #f9f9f9;
}