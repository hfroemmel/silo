/**
 * widgets.css.erb
 *
 * Widget style definitions
 */
/* Flash */
div.flash {
  float: left;
  position: relative;
  top: 16px;
  left: 16px;
  padding: 0 16px;
  font-size: 12px;
  line-height: 24px;
  color: #dbdbdb;
  background-color: #3a3a3a;
  border: 2px solid #4f4f4f;
  border-radius: 2px;
}

div.flash:before,
div.flash:after {
  content: ' ';
  position: absolute;
  top: 50%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
}

div.flash:before {
  margin-top: -8px;
  border-width: 8px;
  border-right-color: #4f4f4f;
}

div.flash:after {
  margin-top: -5px;
  border-width: 5px;
  border-right-color: #3a3a3a;
}

div.flash.highlight {
  left: 44px;
}

/* Pagination */
ul.pagination {
   font-size: .75em;
}

ul.pagination li {
  float: left;
  padding: 3px 4px 1px 4px;
  margin: 0;
  border-radius: 3px;
}

ul.pagination li > * {
  color: #999;
  border-radius: 2px 2px 0 0;
  padding: 5px 6px 3px 6px;
  background: #efefef;
  border-radius: 3px;
}

ul.pagination li.back > * {
  color: #666;
  margin-right: 10px;
  padding-left: 14px;
  background: #efefef url(<%= asset_data_uri 'icon_back.png' %>) center center no-repeat;
}

ul.pagination li.next > * {
  color: #666;
  margin-left: 10px;
  padding-right: 14px;
  background: #efefef url(<%= asset_data_uri 'icon_next.png' %>) center center no-repeat;
}

ul.pagination li span {
  color: #666;
  font-weight: bold;
  text-shadow: none;
  background: transparent;
}

ul.pagination li span.gap {
  color: #999;
  padding: 4px 2px;
  background-color: transparent;
}

/* Validation Errors */
div.validation-errors table {
  margin: -16px 0 16px 0;
}

/* Multi-Lang */
div.multi-lang {
  width: 740px;
}

div.multi-lang > div {
  float: left;
}

div.multi-lang span.more,
div.multi-lang span.delete {
  float: right;
  position: relative;
  cursor: pointer;
  padding: 1px 14px 1px 14px;
  margin-top: 3px;
  margin-left: 5px;
  font-size: .7em;
  font-weight: bold;
  color: #444;
  border: none;
  background: #f0f0f0;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, 1);
  border-radius: 3px;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .4);
}

div.multi-lang span.more:hover,
div.multi-lang span.delete:hover {
  color: #222;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, .2);
  background: rgb(236,236,236);
  background: -moz-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -webkit-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -o-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -ms-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: linear-gradient(to bottom, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
}

div.multi-lang span.more {
  float: left;
}

div.multi-lang span.delete {
  padding: 0 8px 2px 8px;
  margin: 3px 2px 0 5px;
  font-size: .7em;
}

div.multi-lang span.more:after,
div.multi-lang span.delete:after {
  content: ' ';
  position: absolute;
  top: 48%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
  margin-top: -4px;
  border-width: 4px;
  border-right-color: rgb(236,236,236);
}

div.multi-lang span.more:before,
div.multi-lang span.delete:before {
  content: ' ';
  position: absolute;
  top: 48%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
  margin-top: -3px;
  border-width: 4px;
  border-right-color: rgba(0,0,0,.5);
}
