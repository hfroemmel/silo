source 'https://rubygems.org'

# Rails & mysql
gem 'rails', '3.2.12'
gem 'mysql2'

# Assets
group :assets do
  gem 'sass-rails',      '~> 3.2.3'
  gem 'coffee-rails',    '~> 3.2.1'
  gem 'jquery-rails',    '~> 2.2.1'
  gem 'jquery-ui-rails', '~> 4.0.1'
  gem 'uglifier',        '>= 1.0.3'
  gem 'therubyracer',    platforms: :ruby
end

# Development
group :test, :development do
  gem 'rspec-rails',        '~> 2.0'
  gem 'shoulda-matchers',   '~> 1.4.2'
  gem 'factory_girl_rails', '~> 4.2.0'
  gem 'acts_as_fu' ,        '~> 0.0.8'
  gem 'carmen-rails',       '~> 1.0.0.beta2'
  gem 'colorize'
end

# Documentation
group :doc do
  gem 'sdoc', '~> 0.3.19'
end

# Password encryption
gem 'bcrypt-ruby', '~> 3.0.0'

# Pagination
gem 'will_paginate', '~> 3.0'

# Pump plain text out of everything (needs a JRE!)
gem 'yomu', '~> 0.1.1'

# PDF
gem 'prawn', '~> 0.12.0'

# Markdown
gem 'bluecloth', '~> 2.2.0'

# To use debugger
# gem 'debugger'
