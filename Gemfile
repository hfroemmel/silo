source 'https://rubygems.org'

# Rails & mysql
gem 'rails', '3.2.8'
gem 'mysql2'

# Assets
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'jquery-rails'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
end

# Password encryption
gem 'bcrypt-ruby', '~> 3.0.0'

# Pagination
gem 'will_paginate', '~> 3.0'

# Pump plain text out of everything (needs a JRE!)
gem 'yomu', '~> 0.1.1'

# Country lists
gem 'carmen-rails', '~> 1.0.0.beta2'

# PDF
gem 'prawn', '~> 0.12.0'

# Markdown
gem 'bluecloth', '~> 2.2.0'

# To use debugger
# gem 'debugger'
